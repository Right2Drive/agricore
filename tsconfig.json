{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@root/*": ["./*"]
    },
    "target": "es2015",
    "module": "commonjs",
    "sourceMap": true,
    "noImplicitAny": true,
    "lib": [
      "es6",
      "es2017",
      "dom"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
